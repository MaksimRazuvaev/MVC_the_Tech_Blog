<section>

    <header>{{post.post_header}}</header>
    
    <div>
        <p>{{post.post_body}}</p>
        {{#each post.comments as |comment|}}
        <p>{{comment_body}}</p>
        <p>Posted by: {{comment.usercred.usercred_name}}</p>
        <p>on {{format_date comment.created_at}}</p>
        {{/each}}
    </div>
    
    {{#if loggedIn}}
    <form class="form comment-form">

            <div class="form-group">
                <label for="comment">Comment</label>
                <input class="form-input" type="text" id="user-comment" />
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit" data-post-id={{post.id}} >Submit</button>
            </div>
            
        </form>

        <script src="/js/comment.js"></script>
    {{else}}
    <a href="/login">Please login if you want to leave a commnent</a>
    {{/if}}

</section>